
<h2 class="text-center text-primary">Edit a Piece</h2>
 

<!-- TODO: Add a form for making a new piece. Should post to /pieces -->
<div class="container">
    <form method="POST" action="/pieces/<%=piece.id%>/?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" value="<%=piece.name%>">
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" name="image" value="<%=piece.image%>">
        </div>
        <div class="form-group">
            <label for="originCountry">Origin Country</label>
            <input type="text" name="originCountry" value="<%=piece.originCountry%>">
        </div>
        <div class="form-group">
            <label for="museum">Museum</label>
            <select name="museum">
                <% museum.forEach(m => { %>
                    <option value="<%=m._id%>"><%=m.name%></option>
                <% }) %>
            </select>
        </div>
        <label for="creat">Creator</label>
        <div class="form-group">
            <label for="creator">First Name</label>
            <input type="text" name="firstname" value="<%=piece.creator.firstname%>">
        </div>
        <div class="form-group">
            <label for="creator">Last Name</label>
            <input type="text" name="lastname" value="<%=piece.creator.lastname%>">
        </div>
        <div class="form-group">
            <label for="creator">Image</label>
            <input type="text" name="creatorImage" value="<%=piece.creator.image%>">
        </div>
        <div class="form-group">
            <label for="creator">Birth year</label>
            <input type="text" name="birthyear" value="<%=piece.creator.birthyear%>">
        </div>
        <div class="form-group">
            <label for="creator">Death year</label>
            <input type="text" name="deathyear" value="<%=piece.creator.deathyear%>">
        </div>
        <button type="submit">Submit</button>

    </form>
</div>